{% extends "base.twig" %}
{% block title %}Home{% endblock %}
{% block content %}

    <!-- main -->

    <div class="full col-sm-9">

        {% for page in pages %}
            {% if page.slug != 'about' %}
                <div class="row">
                    <div class="col-sm-10">
                        <h3>{{ page.slug }}</h3>
                        <small class="text-muted">{{ page.time|date }}</small>
                        <!-- labels - for tags later
                        <h4><span class="label label-default">techvisually.com</span></h4>
                        -->

                        <p>{{ page.content|truncate(150)|raw }}</p>
                        <h4>
                            <small><a href="{{ page.slug }}" class="text-muted">Read More</a>
                            </small>
                        </h4>
                    </div>
                </div>
                <hr>
            {% endif %}
        {% endfor %}

    </div>
    <!-- /col-9 -->

{% endblock %}